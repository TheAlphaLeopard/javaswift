{
  "compilerOptions": {
    "target": "es2016", // Ensure compatibility with modern JavaScript features
    "module": "commonjs",
    "lib": ["es2016", "dom"], // Add "es2016" for `includes` support
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}